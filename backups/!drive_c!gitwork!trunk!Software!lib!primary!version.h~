#ifndef version_h
#define version_h

  #define CODE_VERSION              0x0300            // Major rev. / Minor rev.
  #define BOOTLOAD_PRI_VERSION      0x0100            // Major rev. / Minor rev.
  #define CODE_PRESENT              0x5A5A

#if !defined GIANTPLUS_TFT_LCD
	#define	HARDWARE_VERSION					0x1100
#else
	#define	HARDWARE_VERSION					0x1700
#endif


extern const uint rom codeVersion;
extern const uint rom hardwareVersion;

#endif
